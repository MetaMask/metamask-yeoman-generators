{
  "name": "metamask-yeoman-generators",
  "repository": "MetaMask/metamask-yeoman-generators",
  "version": "0.0.0",
  "description": "metamask project templates",
  "homepage": "",
  "author": {
    "name": "kumavis",
    "email": "aaron@kumavis.me"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "metamask",
    "yeoman-generator"
  ],
  "devDependencies": {
    "@metamask/eslint-config": "^3.2.0",
    "allow-scripts": "^1.5.3",
    "babel-eslint": "^10.1.0",
    "coveralls": "^3.0.7",
    "eslint": "^7.9.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^3.0.9",
    "jest": "^26.1.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0",
    "yo": "^3.1.1"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "merge": "^1.2.1",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "build": "echo 'no build step'",
    "test": "jest",
    "apply-local": "yo ./generators/package --typescript=false"
  },
  "allowScripts": {
    "husky": true,
    "ejs": false,
    "core-js": false,
    "spawn-sync": false,
    "yo": true
  },
  "license": "MIT"
}
